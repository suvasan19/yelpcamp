<%- include("../partials/header") %>

<div class="container">
<header class="jumbotron">
   <div class="container">
   <h1>YelpCamp Camp Grounds</h1>
   <p>View our camp grounds from our other users all over the world</p>
   <a class="btn btn-primary btn-lg"  href="/campgrounds/new">Add a New Campground.</a>
</div>
</header>

<div class="row">
   <div class="col-lg-12">
      Our Most Popular Campgrounds
   </div>
</div>


<div class="row text-center" style="display: flex; flex-wrap: wrap;">
   <% campgrounds.forEach(function(camp){%>
      <div class="col-md-3 col-sm-6">
         <div class="thumbnail">
            <img src="<%= camp.image %> " alt="">
            <div class="caption">
               <h4><%= camp.name %></h4>
            </div>
            <p>
            <a href="/campgrounds/<%=camp._id%> " class="btn btn-primary">More Info</a>
         </p>
         </div>
      </div> 
   <%});%>
</div>

</div>

<%- include("../partials/footer") %>
