<div class="container">
    <div class="row text-center">
<h1>Add a New Comment to <%=campground.name%> </h1>

<div style="width: 30%; margin: 20px auto;">
    <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
        <div class="form-group">
        <!-- <input class="form-control" type="text" placeholder="Author" name="comment[author]"> -->
    </div>
    <div class="form-group">
        <input class="form-control" type="text" name="comment[text]" placeholder="Text">
    </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
        </form>
</div>

<a href="/campgrounds/<%=campground._id%>">Go Back</a>
</div>
</div>

